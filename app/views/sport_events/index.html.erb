<h1>Events in Sports</h1>
<table class="table">
  <thead>
    <tr>
      <th>Sport &nbsp &nbsp &nbsp &nbsp </th>
      <th>Event  &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp</th>
      <th>Arena  &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @sport_events.each do |sport_event| %>
    <tr>
          <td><%= sport_event.sport.name %></td>
          <td><%= sport_event.event.name %></td>
          <td><%= sport_event.arena %> &nbsp &nbsp</td>
          <td><button><a href="/sport_events/<%= sport_event.id %>">Show</a></button>&nbsp</td>
          <td><button><a href="/sport_events/<%= sport_event.id %>/edit">Edit</a></button>&nbsp</td>
          <td><button><a href="/sport_events/<%= sport_event.id %>/destroy">Destroy</a></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

